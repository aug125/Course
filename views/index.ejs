			var sourisX = 0;
			var sourisY = 0;
			var select = -1;
			var sousMarinRouge = new Image();
			var sousMarinVert = new Image();
			var leftUp = true;
			var rightUp = true;
			var timeDetectionEnnemi = new Date().getTime();
						
