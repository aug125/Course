			socket.on('bateauEnnemi', function(id,x_dep, y_dep, x_dest,y_dest, speed, time_move) {
					console.log('bateauEnnemi');

			
				// Supprimer l'ancien bateau stocké
				for (var i=0; i<listBateauxEnnemis.length;i=i+1)
